@{
    ViewBag.Title = "Educational Portal";
}

<!-- Header -->
<div class="intro-header">

    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>Home Page</h1>
                    <h3>A Web-Portal for Students</h3>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">
                        @*<li>
                            <a href="https://twitter.com/SBootstrap" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span></a>
                        </li>
                        <li>
                            <a href="https://github.com/IronSummitMedia/startbootstrap" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Github</span></a>
                        </li>
                        <li>
                            <a href="#" class="btn btn-default btn-lg"><i class="fa fa-linkedin fa-fw"></i> <span class="network-name">Linkedin</span></a>
                        </li>*@
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.intro-header -->
<br />

<div class="container">

    <div class="row">
        <div class="col-md-8">

            <br />
            <a data-original-title="Broadcast Message" data-toggle="tooltip" href="../Home/About" type="button" class="btn btn-sm btn-primary">About <img class="img-responsive" src="../Images/about.jpg" alt="" height="150" width="150"></a>

            @if (Session["username"] == null)
            {
                <br /><br />
                <a data-original-title="Broadcast Message" data-toggle="tooltip" href="../Account/signup" type="button" class="btn btn-sm btn-primary">Registration <img class="img-responsive" src="../Images/signup.jpg" alt="" height="150" width="150"></a>
                <br /><br />
                <a data-original-title="Broadcast Message" data-toggle="tooltip" href="../Account/signin" type="button" class="btn btn-sm btn-primary">Signin <img class="img-responsive" src="../Images/signin.jpg" alt="" height="150" width="150"></a>
                <br /><br />
            }


        </div>

        <!-- Blog Sidebar Widgets Column -->
        <div class="col-sm-offset-8">
            <!--Search Well -->
            <div class="well">
                <h4>Search</h4>
                <div class="input-group">
                    <input type="text" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
                <!-- /.input-group -->
            </div>

            <!-- Categories Well -->
            <div class="well">
                <h4 style="font-weight:bold">Groups</h4>
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            @for (int a = 0; a < 6; a++)
                            {
                                if (a >= ViewBag.z.Count || a < 0)
                                {
                                    break;
                                }
                                <li>
                                    <a href="../Group/Group?id=@ViewBag.z[a].groupId">@ViewBag.z[a].groupName.ToString()</a>
                                </li>
                            }
                        </ul>
                    </div>

                </div>
                <!-- /.row -->
            </div>


        </div>
    </div>
</div>




<!-- Page Content -->

<div class="content-section-a">

    <div class="container">

        <div class="row">
            <div class="col-lg-5 col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">About Us</h2>
                <p class="lead">If You Want To Know about us <br />Just Click This: </p>
            </div>
            <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                <a data-original-title="Broadcast Message" data-toggle="tooltip" href="../Home/about" type="button" class="btn btn-sm btn-primary"><img class="img-responsive" src="../Images/about.jpg" alt="" height="350" width="350"></a>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.content-section-a -->

@if (Session["username"] == null)
{
    <div class="content-section-b">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Registration</h2>
                    <p class="lead">To Become a Member of our Web-Portal <br />Just Click Register</p>
                </div>
                <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                    <a data-original-title="Broadcast Message" data-toggle="tooltip" href="../Account/signup" type="button" class="btn btn-sm btn-primary"><img class="img-responsive" src="../Images/signup.jpg" alt="" height="350" width="350"></a>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-b -->

    <div class="content-section-a">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Sign In</h2>
                    <p class="lead">If you Already a member of this portal <br />Just Click this:</p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <a data-original-title="Broadcast Message" data-toggle="tooltip" href="../Account/signin" type="button" class="btn btn-sm btn-primary"><img class="img-responsive" src="../Images/signin.jpg" alt="" height="350" width="350"></a>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->
}
