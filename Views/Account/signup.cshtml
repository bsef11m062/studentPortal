                                                <option value="Who is Your Favourite Author?">Who is Your Favourite Author?</option>
                                                <option value="Where did You Spend Your Honeymoon?">Where did You Spend Your Honeymoon?</option>
                                                <option value="What is the Last Name of your First Boss?">What is the Last Name of your First Boss?</option>
                                                <option value="What is Name of Your Favourite Musician?">What is Name of Your Favourite Musician?</option>
                                                <option value="What is the Name of your Favourite aunt?">What is the Name of your Favourite aunt? &nbsp;</option>
                                                <option value="What is the Name of Your Favourite Sports?">What is the Name of Your Favourite Sports?</option>
                                            </select>
                                        </p>
                                        <br />
                                    </div>
                                </div>

                                <div>
                                    <label for="name" class="col-md-3">
                                        Answer:
                                    </label>
                                    <div class="col-md-8">
                                        <p><input type="text" class="form-control" name="answer" id="answer" size="34" placeholder="Enter Answer" /></p>
                                        <br />
                                    </div>
                                    <div class="col-md-1">
                                        <i class="fa fa-lock fa-2x"></i>
                                    </div>
                                </div>


                                
                                <div>
                                    <label for="uploadimage" class="col-md-3">
                                        Upload profile Image:
                                    </label>
                                    <div class="col-md-9">
                                        <input type="file" name="path" id="path">
                                        <br /><p class="help-block">
                                            Allowed formats: jpeg, jpg, gif, png
                                        </p><br />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-3"></div>

                                    <div class="col-md-3 form-group">
                                        <br />
                                        
                                            <input type="submit" name="signup" id="signup" value="Register" class="btn btn-primary btn-lg btn-block" />
                                            
                                        
                                    </div>

                                    <div class="col-md-6">
                                        <br />

                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">

                        </div>
                    </div>
                </div>
            </div>

            <script>


                $(document).ready(function () {

                    $('#username').blur(function () {

                        var username = $('#username').val();
                        if (username == "") {
                            $('#result').text("Enter Username");
                        }
                        else {
                            $.getJSON("Availability?u=" + username, function (data) {

                                if (data == true) {

                                    $('#result').text("User already exists in database");

                                    $('#username').val("");
                                }
                                else {

                                    $('#result').text("User Name is available");
                                }
                            });
                        }
                    });


                });

                //function checkPassword(evt) {

                //    var pwd = Document.getElementById('pwd');
                //    var cpwd = Document.getElementById('cpwd');
                //    if (pwd != cpwd) {
                //        return false;
                //    }
                //}


                $('#signup').click(function () {

                    var pwd = $('#pwd').val();
                    var cpwd = $('#cpwd').val();

                    if (pwd != cpwd) {
                        $('#pwd').focus();
                        $('#cpwd').text("");
                        return false;
                    }

                    var username = $('#username').val();
                    if (username == "") {
                        $('#result').text("Enter Username");
                        $('#username').focus();
                        return false;
                    }

                    return true;
                });


                function isNumberKey(evt) {
                    var charCode = (evt.which) ? evt.which : event.keyCode
                    if (charCode > 31 && (charCode != 43 && charCode != 45 && charCode != 46 && (charCode < 48 || charCode > 57)))
                        return false;
                    return true;
                }
            </script>


