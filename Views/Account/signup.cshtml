                                        @*<p class="help-block">
                                            Min: 6 characters (Alphanumeric only)
                                        </p>*@
                                        <br />
                                    </div>
                                    <div class="col-md-1">
                                        <i class="fa fa-lock fa-2x"></i>
                                    </div>
                                </div>


                                <div>
                                    <label for="sex" class="col-md-3">
                                        Type:
