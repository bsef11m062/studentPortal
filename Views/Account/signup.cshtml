                                        <i class="fa fa-lock fa-2x"></i>
                                    </div>
                                </div>

                                <br />

                                <div>
                                    <label for="name" class="col-md-3">
                                        First Name:
                                    </label>
                                    <div class="col-md-8">
                                        <p><input type="text" class="form-control" name="fname" id="fname" placeholder="Enter First Name" size="34" required /></p>
                                        @*@Html.TextBox("name", "", new { @class = "form-control", name = "name", id = "name", placeholder = "Enter Name", required = "required" })
                                        @Html.ValidationMessageFor(model => model.name)*@

                                        @*                            <input type="text" class="form-control" name="name" id="name" placeholder="Enter Name" required>*@
